  overflow:hidden;
  text-align: center;
}

.show-view{
  height: 480rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-style: solid;
  border-width: 1rpx;
  border-color: #3f72af;
}

.confirm-button{
  margin-top: 65rpx;
  background-color:#3f72af;
  color:white;
  width: 400rpx;
  margin-left: 165rpx;
}