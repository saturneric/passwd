  width: 400rpx;
  height: 80rpx;
  margin-left: 150rpx;
  margin-right: 150rpx;
  margin-top: 80rpx;
  text-align: center;
  font-size: 60rpx;
  border-radius: 20rpx;
}

.info-text{
  font-size: 30rpx;
  margin-top: 10rpx;
}

.info-text-one{
  font-size: 30rpx;
  margin-top: 50rpx;
}

.info-text-end{
  font-size: 30rpx;
  margin-top: 90rpx;
}

.data{
  background-color: white;
  margin-top: 80rpx;
