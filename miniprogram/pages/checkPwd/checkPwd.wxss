  height: 480rpx;
  text-align: center;
}

.set-button{
  background-color:#3f72af;
  color:white;
  margin-left: 50rpx;
  margin-right: 50rpx;
  margin-top: 130rpx;
}

.register-view{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-style: solid;
  border-width: 1rpx;
  border-color: #3f72af;
  height: 480rpx;
}

.register-button{
  background-color:#3f72af;
  color:white;
  width: 400rpx;
}

.data text{
